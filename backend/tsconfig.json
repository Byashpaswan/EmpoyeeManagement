{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language & Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Type Safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Interoperability */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Node.js Types */
    "types": ["node"],

    /* Build Output */
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
